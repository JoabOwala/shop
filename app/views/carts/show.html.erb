
<h1>Your Cart</h1>

<% if @cart.cart_items.any? %>
  <ul>
    <% @cart.cart_items.each do |item| %>
      <li>
        <%= item.product.title %> - <%= item.quantity %> x <%= item.product.price %>
        <%= link_to 'Remove', cart_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
  <p>Total: <%= @cart.total_price %></p>
  <%= button_to 'Empty Cart', empty_cart_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-warning is-small" %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
